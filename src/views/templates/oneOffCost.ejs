<!--One-off cost template-->

<template id="oneOffTemplate">
    <!--Cost Name-->
    <input type="text" name="oneCostName" class="oneCostName">

    <!--Cost Amount-->
    <input type="number" name="oneCostAmount" class="oneCostAmount" min="1">

    <!--Remove one-off cost button-->
    <button type="button" class="removeOneOff" onclick="removeInput(this)">
        <i class="fa-solid fa-xmark"></i>
    </button>
</template>