<!--Home Page-->

<!DOCTYPE html>

<html lang="en">
    <!--Header-->
    <head>
        <title>Home Page</title>
        <%- include('../partials/head') %>

        <!--Link JS-->
        <script src="/scripts/home.js"></script>
    </head>

    <body>
        <!--Navbar-->
        <nav>
            <%- include('../partials/navbar') %>
        </nav>

        <!--Main-->
        <main>
            <!--Page Heading-->
            <div>
                <h1>Project Quote Calculator</h1>
                <p>Enter your details below to get a quote!</p> 
                <button id="clear" type="button">Clear</button>
                <button id="reset" type="button">Reset</button>
            </div>

            <!--Project Quote Calculator Form-->
            <div>
                <!--Error Messages-->
                <p id="empty-form-fields" style="display:none">Please fill in all fields or remove empty fields</p>

                <form method="post" id="quote-calculator">
                    <!--Workers-->
                    <h2>Worker(s)</h2>
                    <button id="addWorker" type="button">+ Worker</button>

                    <!--Append workers-->
                    <div id="workers">
                        <!--Input Labels-->
                        <label for="timeRequired">Time Required:</label>
                        <label for="rate">Rate:</label>
                        <label for="numWorkers">Amount:</label>

                        <div class="worker">
                            <!--Time required and units of time-->
                            <div>
                                <input type="number" name="timeRequired" id="timeRequired" min="1">
                                <select name="units" id="units">
                                    <option value="hours">Hours</option>
                                    <option value="days">Days</option>
                                    <option value="weeks">Weeks</option>
                                    <option value="months">Months</option>
                                </select>
                            </div>

                            <!--Worker Rate-->                            
                            <select name="rate" id="rate">
                                <option value="junior">Junior</option>
                                <option value="standard">Standard</option>
                                <option value="senior">Senior</option>
                            </select>

                            <!--Number of Workers-->
                            <input type="number" name="numWorkers" id="numWorkers" min="1">
                        </div>
                    </div>

                    <!--Ongoing Cost-->
                    <h2>Ongoing Costs</h2>
                    <button id="addOngoing" type="button">+ Ongoing Cost</button>

                    <!--Append ongoing costs-->
                    <div id="ongoingCosts">
                        <!--Input Labels-->
                        <label for="costName">Name:</label>
                        <label for="costAmount">Amount:</label>
                        <label for="costFrequency">Frequency:</label>
                        <label for="costDuration">Duration:</label>
                    </div>

                    <!--One-off Cost-->
                    <h2>One-off Costs</h2>
                    <button id="addOneOff" type="button">+ One-off Cost</button>

                    <!--Append one-off costs-->
                    <div id="oneOffCosts">
                        <!--Input Labels-->
                        <label for="oneCostName">Name:</label>
                        <label for="oneCostAmount">Amount:</label>
                    </div>

                    <!--Button and Output-->
                    <div class="button-holder">
                        <button id="button-calculate">Calculate Quote!</button>
                        <h3 id="finalQuote">Â£</h3>
                        <h3 id="quoteExplained">
                            Project Quote based on: 
                            + Estimated Time Required X Estimated Salary X Number of Workers
                            + Estimated Ongoing Costs X Frequency X Estimated Ongoing Cost Duration
                            + Estuimated One-off Costs

                            Working time: 8 hours per day, 5 days per week, 4 weeks per month
                        </h3>
                    </div>

                    <!--Save Project Quote-->
                    <% if (locals.loggedin) { %>
                        <div class="button-holder">
                            <label for="quoteName">Project Quote Name:</label>
                            <input type="text" name="quoteName" id="quoteName">
                            <button id="button-save">Save Quote</button>
                        </div>
                    <% } %>
                </form>
            </div>
        </main>

        <!--Footer-->
        <footer>
            <%- include('../partials/footer') %>
        </footer>

        <!--Templates-->
        <%- include('../templates/worker') %>
        <%- include('../templates/ongoingCost') %>
        <%- include('../templates/oneOffCost') %>
        
    </body>
</html>